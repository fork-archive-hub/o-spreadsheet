<templates>
  <t t-name="o-spreadsheet-Autofill" owl="1">
    <div
      class="o-autofill position-absolute border border-white"
      t-on-mousedown="onMouseDown"
      t-att-style="style"
      t-on-dblclick="onDblClick">
      <div class="o-autofill-handler position-absolute" t-att-style="styleHandler"/>
      <t t-set="tooltip" t-value="getTooltip()"/>
      <div
        t-if="tooltip"
        class="o-autofill-nextvalue position-absolute bg-white p-1 border border-black pe-none text-nowrap fs-6"
        t-att-style="styleNextvalue">
        <t t-component="tooltip.component" t-props="tooltip.props"/>
      </div>
    </div>
  </t>
</templates>
