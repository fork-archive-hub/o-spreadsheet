<templates>
  <t t-name="o-spreadsheet-TextValueProvider" owl="1">
    <div
      t-att-class="{'o-autocomplete-dropdown pe-none bg-white':state.values.length}"
      t-att-style="state.values.length > 0 ? props.borderStyle : null">
      <t t-foreach="state.values" t-as="v" t-key="v.text">
        <div
          t-att-class="{'o-autocomplete-value-focus d-flex flex-column px-2 py-1 bg-light': state.selectedIndex === v_index,
          'px-2 py-1': state.selectedIndex !== v_index}"
          t-on-click.stop.prevent="() => this.fillValue(v_index)">
          <div class="o-autocomplete-value d-flex flex-column px-2 py-1" t-esc="v.text"/>
          <div
            class="o-autocomplete-description overflow-hidden ps-2 text-truncate fs-6 text-nowrap"
            t-esc="v.description"
            t-if="state.selectedIndex === v_index"
          />
        </div>
      </t>
    </div>
  </t>
</templates>
