<templates>
  <t t-name="o-spreadsheet-FunctionDescriptionProvider" owl="1">
    <div
      class="o-formula-assistant-container user-select-none"
      t-att-style="props.borderStyle"
      t-att-class="{
          'o-formula-assistant-event-none pe-none': assistantState.allowCellSelectionBehind,
          'o-formula-assistant-event-auto pe-auto': !assistantState.allowCellSelectionBehind
          }">
      <t t-set="context" t-value="getContext()"/>
      <div
        class="o-formula-assistant bg-white pb-2"
        t-if="context.functionName"
        t-on-mousemove="onMouseMove"
        t-att-class="{'o-formula-assistant-transparency opacity-25': assistantState.allowCellSelectionBehind}">
        <div class="o-formula-assistant-head bg-light p-3">
          <span t-esc="context.functionName"/>
          (
          <t t-foreach="context.functionDescription.args" t-as="arg" t-key="arg.name">
            <span t-if="arg_index > '0'">,&#xA0;</span>
            <span
              t-att-class="{ 'o-formula-assistant-focus text-primary fw-bold': context.argToFocus === arg_index }">
              <span>
                <span t-if="arg.optional || arg.repeating || arg.default">[</span>
                <span t-esc="arg.name"/>
                <span t-if="arg.repeating">, ...</span>
                <span t-if="arg.optional || arg.repeating || arg.default">]</span>
              </span>
            </span>
          </t>
          )
        </div>

        <div class="o-formula-assistant-core px-3 pb-2 m-1 border-bottom">
          <!-- <div class="o-formula-assistant-gray">ABOUT</div> -->
          <div t-esc="context.functionDescription.description"/>
        </div>

        <t t-foreach="context.functionDescription.args" t-as="arg" t-key="arg.name">
          <div
            class="o-formula-assistant-arg d-flex flex-column px-3 py-1 m-1"
            t-att-class="{
                'o-formula-assistant-gray text-secondary': context.argToFocus >= '0',
                'o-formula-assistant-focus': context.argToFocus === arg_index,
              }">
            <div>
              <span
                t-att-class="{
                'text-primary fw-bold': context.argToFocus === arg_index,
              }"
                t-esc="arg.name"
              />
              <span
                t-if="arg.optional || arg.repeating || arg.default ">&#xA0;- [optional]&#xA0;</span>
              <span t-if="arg.default">
                <t t-esc="arg.defaultValue"/>
                <span>&#xA0;by default</span>
              </span>
              <span t-if="arg.repeating">repeatable</span>
            </div>
            <div
              class="o-formula-assistant-arg-description fs-6"
              t-att-class="{
                'text-black': context.argToFocus === arg_index,
              }"
              t-esc="arg.description"
            />
          </div>
        </t>
      </div>
    </div>
  </t>
</templates>
