<templates>
  <t t-name="o-spreadsheet-ScorecardChart" owl="1">
    <div class="o-scorecard d-flex flex-column bg-white user-select-none" t-att-style="chartStyle">
      <t t-set="textStyles" t-value="getTextStyles()"/>
      <div
        t-if="title"
        class="o-title-text overflow-hidden text-nowrap text-start"
        t-esc="title"
        t-att-style="textStyles.titleStyle"
      />
      <div
        class="o-scorecard-content d-flex flex-column justify-content-center h-100 text-center"
        t-att-style="chartContentStyle">
        <div
          class="o-key-text overflow-hidden text-nowrap"
          t-if="keyValue"
          t-esc="keyValue"
          t-att-style="textStyles.keyStyle"
        />
        <t t-if="baseline || baselineDescr">
          <div
            class="o-baseline-text overflow-hidden text-nowrap"
            t-att-style="textStyles.baselineStyle">
            <t t-if="baseline">
              <t t-if="baselineArrowDirection === 'up'">
                <t t-call="o-spreadsheet-Icon.ARROW_UP">
                  <t t-set="color" t-value="'fill : ' + runtime.baselineColor"/>
                </t>
              </t>
              <t t-if="baselineArrowDirection === 'down'">
                <t t-call="o-spreadsheet-Icon.ARROW_DOWN">
                  <t t-set="color" t-value="'fill : ' + runtime.baselineColor"/>
                </t>
              </t>
              <span t-att-style="textStyles.baselineValueStyle" class="o-baseline-text-value">
                <t t-esc="baseline"/>
              </span>
            </t>
            <span t-att-style="textStyles.baselineDescrStyle" class="o-baseline-text-description">
              <t t-esc="baselineDescr"/>
            </span>
          </div>
        </t>
      </div>
    </div>
  </t>
</templates>
