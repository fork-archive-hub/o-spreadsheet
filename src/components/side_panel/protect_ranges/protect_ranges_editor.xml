<templates>
  <t t-name="o-spreadsheet-ProtectRangesEditor" owl="1">
    <div class="o-section">
      <div class="o-section-title">Description</div>
      <input type="text" class="o-input" placeholder="Enter a description"/>
    </div>
    <div class="o-section">
      <div class="o-section-title">Type</div>
      <div class="d-flex flex-row">
        <div class="form-check me-2">
          <input
            class="form-check-input"
            type="radio"
            id="range"
            name="protectionType"
            value="range"
            t-model="state.type"
          />
          <label for="range" class="form-check-label">Range</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            id="sheet"
            name="protectionType"
            value="sheet"
            t-model="state.type"
          />
          <label for="sheet" class="form-check-label">Sheet</label>
        </div>
      </div>
    </div>
    <div class="o-section" t-if="state.type === 'range'">
      <div class="o-section-title">Range</div>
      <SelectionInput ranges="[]" hasSingleRange="true"/>
    </div>
    <div class="o-section" t-if="state.type === 'sheet'">
      <div class="o-section-title">Sheet</div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox"/>
        <label for="sheet" class="form-check-label">Except certain cells</label>
      </div>
      <SelectionInput ranges="[]"/>
    </div>
  </t>
</templates>
