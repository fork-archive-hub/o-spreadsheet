<templates>
  <t t-name="o-spreadsheet-SettingsPanel" owl="1">
    <div class="o-settings-panel">
      <div class="o-section">
        <div class="o-section-title">Locale</div>
        <select
          class="o-input o-type-selector"
          t-on-change="(ev) => this.onLocaleChange(ev.target.value)">
          <option
            t-foreach="state.supportedLocales"
            t-as="locale"
            t-key="locale.code"
            t-att-value="locale.code"
            t-esc="locale.name"
            t-att-selected="state.locale.code === locale.code"
          />
        </select>
      </div>
    </div>
  </t>
</templates>
