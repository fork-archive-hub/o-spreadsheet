<templates>
  <t t-name="o-spreadsheet-SettingsPanel" owl="1">
    <div class="o-settings-panel">
      <div class="o-section">
        <div class="o-section-title">Locale</div>
        <select
          class="o-input o-type-selector"
          t-on-change="(ev) => this.onLocaleChange(ev.target.value)">
          <option
            t-foreach="state.supportedLocales"
            t-as="locale"
            t-key="locale.code"
            t-att-value="locale.code"
            t-esc="locale.name"
            t-att-selected="state.locale.code === locale.code"
          />
        </select>
        <div class="o-locale-preview mt-2 ms-3">
          <div>
            <span class="fw-bold me-1">Number format:</span>
            <span t-esc="numberFormat"/>
          </div>
          <div>
            <span class="fw-bold me-1">Date format:</span>
            <span t-esc="dateFormat"/>
          </div>
          <div>
            <span class="fw-bold me-1">DateTime format:</span>
            <span t-esc="dateTimeFormat"/>
          </div>
        </div>
      </div>
    </div>
  </t>
</templates>
