<templates>
  <t t-name="o-spreadsheet-SidePanel" owl="1">
    <div class="o-sidePanel d-flex flex-column border-start bg-white">
      <div
        class="o-sidePanelHeader d-flex justify-content-between align-items-center p-2 border-bottom fw-bold">
        <div class="o-sidePanelTitle px-2 py-1 text-secondary fw-bold" t-esc="getTitle()"/>
        <div
          class="o-sidePanelClose btn btn-secondary"
          t-on-click="() => this.props.onCloseSidePanel()">
          Ã—
        </div>
      </div>
      <div class="o-sidePanelBody overflow-auto w-100 h-100">
        <t
          t-component="state.panel.Body"
          t-props="props.panelProps"
          onCloseSidePanel="props.onCloseSidePanel"
          t-key="'Body_' + props.component"
        />
      </div>
      <div class="o-sidePanelFooter" t-if="state.panel.Footer">
        <t
          t-component="state.panel.Footer"
          t-props="props.panelProps"
          t-key="'Footer_' + props.component"
        />
      </div>
    </div>
  </t>
</templates>
